  <script>
    // Efek tambahan untuk teks jika ingin lebih interaktif
    const glowText = document.querySelector('.glow');
    let glowState = true;

    setInterval(() => {
      if (glowState) {
        glowText.style.textShadow = '0 0 20px #ff00ff, 0 0 40px #ff00ff, 0 0 60px #ff00ff';
      } else {
        glowText.style.textShadow = '0 0 15px #0ff, 0 0 30px #ff0, 0 0 45px #ff00ff';
      }
      glowState = !glowState;
    }, 1000); // Berganti efek setiap 1 detik
